set number
syntax on
colorscheme simple-dark
set tabstop=4
set autoindent
set expandtab
set softtabstop=4
set showcmd
set cursorline
set wildmenu
set showmatch
set incsearch
set hlsearch
nnoremap <leader><space> :nohlsearch<CR>
set foldenable
set foldlevelstart=10
set foldnestmax=10
nnoremap <space> za
set foldmethod=indent
inoremap jk <esc>
set shiftwidth=4
